{% style %}
  .video-section{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: calc({{ section.settings.padding_bottom }}px + 40px);
  }
  .video-section-title{
    color: {{ section.settings.title_color }};
  }
  /* smaller, dark, rounded square */
  .flickity-prev-next-button:hover {
    background: #FFFFFF;
    color:#F26829 !important;
  }
  .flickity-prev-next-button:hover path{
    fill:#F26829 !important;
  }
  /* arrow color */
  .flickity-prev-next-button .arrow {
    fill: white;
  }
  .flickity-prev-next-button.no-svg {
    color: white;
  }
 .carousel-cell {
  width: 50%; /* half-width */
 
}
  .flickity-button{
    position: absolute;
    background: #282973;
    border: none;
    color: #333;

  }
  .video-section-inner{
    position:relative;
  }
  .flickity-prev-next-button {
    top: 50%;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    transform: translateY(-50%);
    padding:12px;
}
  .flickity-viewport {
    overflow: hidden;
    position: relative;
    height: 100%;
}
    &::after {
    content: "flickity";
    display: none;
  }

  .flickity-cell.is-selected {
    position: absolute;
    inset: 0;
  }
  .flickity-prev-next-button .flickity-button-icon{
    width: 24px;
  }
  .flickity-page-dots .dot{
    background: #000 !important;
    opacity:1 !important;
  }
  .flickity-page-dots .dot.is-selected{
    background: #bb3b00 !important;
    
  }
{% endstyle %}



{% schema %}
  {
    "name": "Video Section",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Tested and Approved Content"
      },
      {
        "type": "text",
        "label": "Title",
        "id": "video_section_title",
        "default": "Mother Tested and Approved"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Spacing",
        "min": 20,
        "max": 100,
        "default": 45,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Spacing",
        "min": 20,
        "max": 100,
        "default": 100,
        "unit": "px"
      }
    ],
    "blocks": [
      {
        "type": "video-col",
        "name": "Video Column",
        "settings": [
          {
            "type": "url",
            "label": "Video URL",
            "id": "video_url"
          },
          {
            "type": "image_picker",
            "label": "Thumbnail Image",
            "id": "image_url"
          }
        ]
      }
    ],
    "default": {
      "settings": {
      },
      "blocks": [
        {
          "type": "video-col"
        }
      ]
    }
  }
{% endschema %}

