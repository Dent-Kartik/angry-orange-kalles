 function updateAccessibility() {
    var cells = flkty.getCellElements();
    var selectedIndex = flkty.selectedIndex;
    var groupCells = 2; // Number of visible cells

    // Reset all cells
    cells.forEach(function(cell) {
      cell.setAttribute('aria-hidden', 'true');
      cell.setAttribute('tabindex', '-1');
      var video = cell.querySelector('video');
        if (video) video.setAttribute('tabindex', '-1');
    });

    // Set attributes for visible cells
    for (var i = 0; i < groupCells; i++) {
      var visibleIndex = (selectedIndex + i) % cells.length;
      var cell = cells[visibleIndex];
      cell.setAttribute('aria-hidden', 'false');
      cell.setAttribute('tabindex', '0');
      var video = cell.querySelector('video');
        if (video) video.setAttribute('tabindex', '0');
    }
  }

  // flkty.on('ready', updateAccessibility);
